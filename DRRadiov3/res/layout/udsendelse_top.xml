<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        >
    <!--
                android:descendantFocusability="blocksDescendants"
                gør at knappen her ikke tager fokus for hele listeelementet
    -->

    <include
            layout="@layout/element_billede_med_titeloverlaegning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17.04 XX LOGO"
            android:textColor="@color/grå70"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/titelxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P3 Sporten"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/kunstnerxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:text=" - datoen"
                android:layout_weight="1"/>

    </LinearLayout>


    <Button
            android:id="@+id/hør"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawableLeft="@drawable/dri_lyd_hvid"
            android:text="HØR UDSENDELSE"
            android:textColor="@color/hvid"
            android:background="@drawable/knap_blaa_bg"/>

    <include
            layout="@layout/element_download_del"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/beskrivelse"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For lige om lidt bliver fremdriftsreformen implementeret, der skal få jer hurtigere ud af jeres uddannelse. Vi taler med Morten Østergaard om de unge studerendes bekymringer for fremtiden. For hvordan hænger dygtige og arbejdsmarkedsparate akademikere sammen med et studieliv, hvor man risikerer at udvikle stress og eksamensangst? (Genudsendelse fra onsdag). (Sendes også søndag 7.03, 18.32 og 00.05)."
            />


    <include
            layout="@layout/element_playliste_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
