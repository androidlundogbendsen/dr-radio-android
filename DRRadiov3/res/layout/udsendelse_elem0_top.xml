<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/hvid"
        >
    <!--
                android:descendantFocusability="blocksDescendants"
                gør at knappen her ikke tager fokus for hele listeelementet
    -->

    <include
            layout="@layout/elem_inkl_billede_med_titeloverlaegning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/skrald__kanallogo_p3"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/titel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P3 Sporten"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/dato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" - 20. jan 2014"
                android:layout_weight="1"/>
    </LinearLayout>


    <Button
            android:id="@+id/hør"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawableLeft="@drawable/dri_lyd_hvid"
            android:text="HØR UDSENDELSE"
            android:textColor="@color/hvid"
            android:background="@drawable/knap_blaa_bg"/>

    <include
            layout="@layout/udsendelse_elem_hent_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/beskrivelse"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For lige om lidt bliver fremdriftsreformen implementeret."
            />

    <!--
        <include
                layout="@layout/udsendelse_elem_playliste_info_overskrift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    -->
</LinearLayout>
