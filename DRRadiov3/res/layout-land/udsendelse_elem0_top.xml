<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/hvid"
        >
    <!--
                android:descendantFocusability="blocksDescendants"
                gør at knappen her ikke tager fokus for hele listeelementet
    -->
    <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <include
            layout="@layout/inkl_billede_med_titeloverlaegning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/skrald__kanallogo_p3"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

            <TextView
                    android:id="@+id/p4navn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nordjylland"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"/>
        </LinearLayout>

            <TextView
                    android:id="@+id/titel_og_tid"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content"
                    android:text="P3 radioavisen bla bla bla  - 20. jan 2014"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            >


    <Button
            android:id="@+id/hør"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hørknap_højde"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:drawableLeft="@drawable/dri_lyd_hvid"
            android:text="HØR UDSENDELSE"
            android:textColor="@color/hvid"
            android:background="@drawable/knap_blaa_bg"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="42:30"
                android:singleLine="true"
                android:id="@+id/seekBarMaxTekst"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2:30"
                android:singleLine="true"
                android:background="@color/hvid"
                android:id="@+id/seekBarTekst"/>
    </FrameLayout>

    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/seekBar"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@drawable/seekbar_progress"/>

    <include
            layout="@layout/udsendelse_elem_hent_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <!--
            android:thumb="@drawable/seekbar_haandtag"
        <include
                layout="@layout/udsendelse_elem_playliste_info_overskrift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    -->
</LinearLayout>
</LinearLayout>
