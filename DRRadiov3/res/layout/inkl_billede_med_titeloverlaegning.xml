<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/billede"
            android:src="@drawable/eksempel_udsendelse"/>

    <!--
        <ImageButton
                android:id="@+id/hør"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/dri_lyd_hvid"/>
    -->

    <LinearLayout
            android:id="@+id/lige_nu_og_titel_ll"
            android:layout_gravity="left|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >

        <TextView
                android:id="@+id/lige_nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIGE NU"
                android:textSize="16sp"
                android:background="@color/sort"
                android:textColor="@color/blå"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="0dp"
                />

        <TextView
                android:id="@+id/titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/sort"
                android:textColor="@color/hvid"
                android:text="PRESSEN PÅ P3"
                android:textSize="26sp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:paddingTop="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="0dp"
                android:layout_marginBottom="8dp"/>

    </LinearLayout>

</FrameLayout>