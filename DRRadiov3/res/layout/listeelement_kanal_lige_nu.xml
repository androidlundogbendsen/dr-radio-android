<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

    <include
            layout="@layout/listeelement_billede_med_titeloverlaegning"
            android:id="@+id/include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/tidsbjælke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/starttidbjælke"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="74"
                    android:background="@color/grå60"/>

            <TextView
                    android:id="@+id/slutttidbjælke"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="26"
                    android:textColor="@color/hvid"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:background="@color/grå10"/>

        </LinearLayout>


        <TextView
                android:id="@+id/startid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.10"
                android:textColor="@color/hvid"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText"/>

        <TextView
                android:id="@+id/slutttid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.30"
                android:layout_gravity="right"
                android:textColor="@color/hvid"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText"/>
    </FrameLayout>


</LinearLayout>
