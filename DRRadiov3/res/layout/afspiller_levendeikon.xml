<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/yderstelayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/widget_baggrund"
        >

    <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/startStopKnap"
            android:src="@drawable/afspiller_spil"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            />


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

        <TextView
                android:id="@+id/titel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="P3 Live"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:maxLines="2"
                tools:ignore="HardcodedText"
                android:textColor="@color/hvid"/>

        <TextView
                android:id="@+id/metainformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="P3"
                android:singleLine="true"
                tools:ignore="HardcodedText"
                android:textColor="@color/sort"/>

    </LinearLayout>


    <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitEnd"
                android:src="@drawable/dr_logo"
            />

        <!-- fix for http://code.google.com/p/android/issues/detail?id=11040 :
          ProgressBar's synlighed kan ikke ændres direkte, man er nødt til at indlejre den
          i f.eks. et LinearLayout -->
        <LinearLayout
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:visibility="visible"
                >

            <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>

</LinearLayout>