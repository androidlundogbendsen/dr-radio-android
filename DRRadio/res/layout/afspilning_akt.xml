<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"

	android:background="#FFFFFFFF">

	<LinearLayout android:id="@+id/player_select_channel_linearlayout"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:background="@color/tranparent_darkgrey" android:paddingLeft="5dp"
		android:paddingRight="5dp" android:paddingTop="2dp"
		android:paddingBottom="2dp">


		<LinearLayout android:id="@+id/player_select_channel_imagelinearlayout"
			android:layout_height="wrap_content" android:layout_width="fill_parent">

			<ImageView android:id="@+id/player_select_channel_billede"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:layout_gravity="left|center_vertical" android:scaleType="fitStart"
				android:src="@drawable/kanal_p1d" />
			<TextView android:id="@+id/player_select_channel_text"
				android:layout_width="wrap_content" android:text="P4kbh"
				android:textColor="@android:color/white" android:textSize="@dimen/player_channel_title_size"
				android:layout_height="fill_parent" android:layout_gravity="center_vertical"
				android:paddingLeft="5dp">
			</TextView>

			<LinearLayout android:layout_height="wrap_content"
				android:layout_weight="1" android:layout_width="wrap_content" />

			<Button android:id="@+id/player_select_channel_button"
				android:layout_width="wrap_content" android:layout_height="@dimen/button_height"
				android:text="Vælg kanal" android:textSize="@dimen/player_select_channel_size"
        android:nextFocusDown="@+id/start_stop_knap"
        android:nextFocusLeft="@+id/start_stop_knap"
				android:layout_gravity="center_vertical|right" android:paddingLeft="20dp"
				android:paddingRight="20dp" android:paddingTop="0dp"
				android:paddingBottom="0dp">
			</Button>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:id="@+id/player_play_music_linearlayout"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:background="@color/transparent_grey">

		<LinearLayout android:id="@+id/player_play_music_linearlayout"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingLeft="5dp" android:paddingRight="5dp"
			android:paddingTop="10dp" android:paddingBottom="10dp">

			<ImageButton android:id="@+id/start_stop_knap"
        android:contentDescription="start stop"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center_vertical" android:background="@drawable/play" />

      <!-- android:focusable="true" gør at blinde og svagtsynede der bruger
           skærmlæser kan bruge trackballen til at flytte hen på viewet og
           få læst teksten højt. Jacob 28. nov 2011 -->
			<TextView android:id="@+id/status" android:text="Forbinder"
				android:textColor="#FF000000" android:gravity="center_vertical"
  			android:textSize="@dimen/player_current_program_channel_size"
        android:focusable="true"
				android:paddingLeft="10dp" android:layout_weight="1"
				android:layout_width="wrap_content" android:layout_height="fill_parent" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:id="@+id/player_program_channel_linearlayout"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:paddingLeft="5dp" android:paddingRight="5dp"
		android:paddingTop="10dp" android:paddingBottom="0dp">

      <!-- android:focusable="true" gør at blinde og svagtsynede der bruger
           skærmlæser kan bruge trackballen til at flytte hen på viewet og
           få læst teksten højt. Jacob 28. nov 2011 -->
		<TextView android:id="@+id/player_current_program_channel_textview"
			android:textSize="@dimen/player_current_program_channel_size"
			android:text="Lige nu på P3" android:textColor="@android:color/black"
        android:focusable="true"
			android:layout_gravity="center_vertical|left" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>

	</LinearLayout>

	<LinearLayout android:id="@+id/player_current_program_title_linearlayout"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:paddingLeft="5dp" android:paddingRight="5dp"
		android:paddingTop="2dp" android:paddingBottom="0dp">

      <!-- android:focusable="true" gør at blinde og svagtsynede der bruger
           skærmlæser kan bruge trackballen til at flytte hen på viewet og
           få læst teksten højt. Jacob 28. nov 2011 -->
		<TextView android:id="@+id/player_current_program_title_textview"
			android:textSize="@dimen/player_current_program_title_size"
			android:text="Emil fra Lønneberg" android:layout_gravity="center_vertical|left"
        android:focusable="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@android:color/black">
		</TextView>

	</LinearLayout>

	<LinearLayout android:id="@+id/player_current_program_description_linearlayout"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_weight="1">

		<ScrollView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:paddingLeft="5dp"
			android:paddingRight="5dp" android:paddingTop="5dp"
			android:paddingBottom="0dp">

			<TextView android:id="@+id/player_current_program_description_textview"
				android:textSize="@dimen/player_current_program_description_size"
				android:text="Hvor er Emil fra Lønneberg? Vi leder efter ham forskellige steder"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1" android:paddingRight="20dp"
				android:textColor="@android:color/black">
			</TextView>
		</ScrollView>
	</LinearLayout>

	<LinearLayout android:id="@+id/player_tracks_linearlayout"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:paddingLeft="10dp" android:paddingRight="10dp"
		android:paddingTop="10dp" android:paddingBottom="10dp">

		<FrameLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<dk.dr.radio.diverse.MinViewFlipper android:id="@+id/flipper"
				android:layout_width="fill_parent" android:layout_height="wrap_content"

				android:paddingLeft="10dp" android:paddingRight="10dp"
				android:paddingTop="10dp" android:paddingBottom="15dp"
				android:layout_marginLeft="0dp" android:layout_marginRight="0dp"
				android:layout_weight="0" android:background="@layout/flipper_background"
				android:layout_gravity="center_vertical">
			</dk.dr.radio.diverse.MinViewFlipper>


			<ImageView android:id="@+id/previous" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center|center_vertical|left"
				android:src="@drawable/button80left" android:background="@null">
			</ImageView>

			<ImageView android:id="@+id/next" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center|center_vertical|right"
				android:src="@drawable/button80right" android:background="@null">
			</ImageView>

		</FrameLayout>

	</LinearLayout>

	<LinearLayout android:id="@+id/player_next_program_linearlayout"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:background="@color/transparent_grey" android:paddingLeft="5dp"
		android:paddingRight="5dp" android:paddingTop="5dp"
		android:paddingBottom="10dp">

		<Button android:id="@+id/player_about_button"
			android:layout_width="wrap_content" android:layout_height="@dimen/button_height"
			android:text="@string/about" android:textSize="@dimen/player_about_size"
			android:layout_gravity="center_vertical|left" android:paddingLeft="20dp"
			android:paddingRight="20dp" android:paddingTop="0dp"
			android:paddingBottom="0dp">
		</Button>

		<Button android:id="@+id/player_format_button"
			android:layout_width="wrap_content" android:layout_height="@dimen/button_height"
			android:text="Format" android:textSize="@dimen/player_about_size"
			android:layout_gravity="center_vertical|left" android:paddingLeft="10dp"
			android:paddingRight="10dp" android:paddingTop="0dp"
			android:paddingBottom="0dp">
		</Button>

		<RelativeLayout android:id="@+id/playser_next_program_relativelayout"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<TextView android:id="@+id/player_next_program_textview"
				android:textSize="@dimen/player_next_program_size" android:text="NÆSTE PROGRAM"
				android:gravity="right" android:layout_gravity="center_vertical|right"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textColor="@color/white">
			</TextView>

			<TextView android:layout_below="@+id/player_next_program_textview"
				android:id="@+id/player_next_program_title_textview"
				android:textSize="@dimen/player_next_program_title_size"
				android:gravity="right" android:text="Morgenshowet"
				android:layout_gravity="center_vertical|right" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textColor="@android:color/black">
			</TextView>
		</RelativeLayout>

	</LinearLayout>

</TableLayout>