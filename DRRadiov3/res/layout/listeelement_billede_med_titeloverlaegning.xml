<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eksempel_udsendelse"
        >
    <!--
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/grå60"
                android:background="@drawable/runde_hjoerner"
    -->


    <ImageButton
            android:id="@+id/højttalerikon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/dri_lyd_hvid"/>

    <LinearLayout
            android:id="@+id/lige_nu_og_titel_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            >

        <TextView
                android:id="@+id/lige_nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIGE NU"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@color/sort"
                android:textColor="#26b7c8"
                android:gravity="center_vertical|center_horizontal"
                android:padding="8dp"/>

        <TextView
                android:id="@+id/titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/sort"
                android:textColor="@color/hvid"
                android:text="PRESSEN PÅ P3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:padding="8dp"/>

    </LinearLayout>
</RelativeLayout>
