<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

    <include
            layout="@layout/listeelement_billede_med_titeloverlaegning"
            android:id="@+id/include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/tidsbjælke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/starttidbjælke"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="74"
                    android:background="@color/grå60"/>

            <TextView
                    android:id="@+id/slutttidbjælke"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="26"
                    android:textColor="@color/hvid"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:background="@color/grå20"/>
            <!--
                                   android:textAppearance="?android:attr/textAppearanceLarge"

            -->
        </LinearLayout>


        <TextView
                android:id="@+id/startid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.10"
                android:textColor="@color/hvid"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText"/>

        <TextView
                android:id="@+id/slutttid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.30"
                android:layout_gravity="right"
                android:textColor="@color/hvid"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText"/>
    </FrameLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grå10"
            android:padding="16dp"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/kunstnerbillede"
                android:src="@drawable/eksempel_kunstner"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">


            <TextView
                    android:id="@+id/senest_spillet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SENEST SPILLET"
                    android:textColor="@color/grå70"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:ignore="HardcodedText"
                    />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/titel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Feel Again One"
                        tools:ignore="HardcodedText"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/kunstner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="|  Republic"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText"
                        android:layout_weight="1"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:id="@+id/højttalerikon"
                        android:src="@drawable/dri_lyd2_blaa"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
