<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="center_vertical"
              android:layout_width="fill_parent"
              android:layout_height="50dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/dr_logo"
            />

    <dk.dr.radio.diverse.ImageViewTilBlinde
            android:id="@+id/billede"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/kanalappendix_drm"
            />

    <TextView
            android:id="@+id/tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P4 Esbjerg"
            android:textSize="@dimen/kanalvalg_tekststr"
            android:layout_marginLeft="10dp"
            android:textColor="#FF000000"
            />


    <dk.dr.radio.diverse.ImageViewTilBlinde
            android:id="@+id/ikon"
            android:src="@drawable/kanalvalg_plus"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/kanalvalg_tekststr"
            android:layout_gravity="right|center_vertical"
            android:scaleType="fitEnd"
            android:layout_marginRight="10dp"
            />

</LinearLayout>
