<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/knap_graa_bg"
        >

    <ImageView
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/billede"
            android:src="@drawable/eksempel_udsendelse"/>


    <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/skrald__kanallogo_p3"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P3 Sporten"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:layout_weight="1"/>


        <ToggleButton
                android:id="@+id/favorit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dri_favorit_graa40"/>
    </LinearLayout>


    <TextView
            android:id="@+id/beskrivelse"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:text="For lige om lidt bliver fremdriftsreformen implementeret."
            />

    <View
            android:background="@color/sort"
            android:layerType="software"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="3dp"/>


    <TextView
            android:id="@+id/alle_udsendelser"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALLE UDSENDELSER (12)"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"/>


</LinearLayout>
