<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent" >

        <TextView
            android:textSize="18sp" 
            android:id="@+id/overskrift"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Senest lyttede" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@color/grå20"
            android:divider="@null"
            android:dividerHeight="0px"
            android:fadingEdgeLength="4dp"
            android:requiresFadingEdge="vertical" />
        <!--
    hurtigscroll
                android:scrollbars="none"
                android:fastScrollEnabled="true"/>


    For mere kompleks tomhedsindikator, brug ViewStub - se
               http://cyrilmottier.com/2011/06/20/listview-tips-tricks-1-handle-emptiness/
                android:visibility="gone"
            android:layout_gravity="center"
        -->

        <TextView
            android:id="@+id/tom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Indlæser, vent venligst..."
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>