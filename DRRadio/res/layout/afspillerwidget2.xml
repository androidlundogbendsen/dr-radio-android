<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg_png_black"
    >
    <TextView
        android:id="@+id/kanalnavn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dip"
        android:paddingLeft="70dip"
        android:gravity="left"
        android:text="P3"
        android:textColor="#FFFFFF"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingLeft="230dip"
        android:gravity="left"
        android:text="Lige nu:"
        android:textColor="#FFFFFF"
        android:textSize="12dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/udsendelse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingLeft="280dip"
        android:gravity="left"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="12dip"
        android:lines="1"
        android:paddingRight="10dip"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22dip"
        android:paddingLeft="230dip"
        android:gravity="left"
        android:text="Næste:"
        android:textColor="#FFFFFF"
        android:textSize="12dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/næsteUdsendelse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22dip"
        android:paddingLeft="280dip"
        android:gravity="left"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="12dip"
        android:lines="1"
        android:paddingRight="10dip"
        />


    <ImageButton
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:id="@+id/startStopKnap"
	    android:layout_marginLeft="20dip"
	    android:layout_marginTop="8dip"
	    android:src="@drawable/play"
	    android:background="#00000000"
	    >

    </ImageButton>

    <Button
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:id="@+id/afspillerknap"
	    android:layout_marginLeft="70dip"
	    android:layout_marginTop="0dip"
	    android:background="#00000000">

    </Button>
</RelativeLayout>