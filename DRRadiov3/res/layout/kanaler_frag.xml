              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <dk.dr.radio.akt.diverse.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dip"
