<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        >
    <!--
                android:descendantFocusability="blocksDescendants"
                gør at knappen her ikke tager fokus for hele listeelementet
    -->

    <include
            layout="@layout/element_billede_med_titeloverlaegning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <FrameLayout
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/tidsbjælke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/starttidbjælke"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="74"
                    android:background="@color/grå60"/>

            <TextView
                    android:id="@+id/slutttidbjælke"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="26"
                    android:textColor="@color/hvid"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:background="@color/grå20"/>
            <!--
                                   android:textAppearance="?android:attr/textAppearanceLarge"

            -->
        </LinearLayout>


        <TextView
                android:id="@+id/startid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.10"
                android:textColor="@color/hvid"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText"/>

        <TextView
                android:id="@+id/slutttid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.30"
                android:layout_gravity="right"
                android:textColor="@color/hvid"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText"/>
    </FrameLayout>


    <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/senest_spillet_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grå10"
            android:padding="8dp"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/senest_spillet_kunstnerbillede"
                android:src="@drawable/eksempel_kunstner"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">


            <TextView
                    android:id="@+id/senest_spillet_overskrift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SENEST SPILLET"
                    android:textColor="@color/grå70"
                    tools:ignore="HardcodedText"
                    />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/senest_spillet_titel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feel Again One"
                        tools:ignore="HardcodedText"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/senest_spillet_kunstner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="|  Republic"
                        android:singleLine="true"
                        tools:ignore="HardcodedText"
                        android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
            android:id="@+id/hør_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:drawableLeft="@drawable/dri_lyd_hvid"
            android:text="HØR P3 LIVE"
            android:textColor="@color/hvid"
            android:layout_marginBottom="16dp"
            android:background="@drawable/knap_blaa_bg"/>


</LinearLayout>
