<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">

    <View
            android:id="@+id/stiplet_linje"
            android:background="@drawable/stiplet_linje"
            android:layout_width="match_parent"
            android:layout_marginBottom="13dp"
            android:layout_height="3dp"/>


    <TextView
            android:id="@+id/startid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17.04"
            android:textColor="@color/grå70"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P3 Sporten"
                tools:ignore="HardcodedText"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/kunstner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:text="|  Polarkreis 18"
                tools:ignore="HardcodedText"
                android:layout_weight="1"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:id="@+id/højttalerikon"
                android:src="@drawable/dri_lyd2_blaa"/>

    </LinearLayout>

</LinearLayout>
